

<%= link_to "New user", new_user_path, class: 'btn btn-secondary' %>

<h1>Users</h1>
  <%== pagy_nav(@pagy) %>

<table class="table table-light table-hover table-bordered">
  <thead class="table-dark">
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
        <td>
          <%= user.first_name%>
        </td>
        <td>
          <%= user.last_name%>
        </td>
        <td>
          <%= user.email%>
        </td>
        <td>
          <%= link_to 'Edit', edit_user_path(user.id)%>
          <%= link_to 'Show', user_path(user.id)%>
          <%= link_to "Add book", new_book_path(user.id)%>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>

<%= link_to "New user", new_user_path, class: 'btn btn-secondary' %>
