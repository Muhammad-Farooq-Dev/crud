

<h1>Books</h1>

<table class="table table-light table-hover table-bordered">
  <thead class="table-dark">
    <th>Book Name</th>
    <th>Decsription</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
        <td>
          <%= book.name%>
        </td>
        <td>
          <%= book.desc%>
        </td>
        <td>
          <%= link_to 'Edit', edit_book_path(user.id)%>
          <%= link_to 'Show', book_path(user.id)%>
          <%= button_to "Destroy", book ,class:'btn btn-danger', method: :delete%>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>

<%= link_to "New book", new_book_path, class: 'btn btn-secondary' %>
